@model List<Tur>


<div class="list-group">
    <a href="/movies/list" class="list-group-item list-group-item-action @(ViewBag.SelectedTur==null?"active":"")">Tüm Filmler</a>
    @foreach (var tur in Model)
    {
        <a href="/movies/list/@tur.TurId" class="list-group-item list-group-item-action @(ViewBag.SelectedTur==tur.TurId.ToString()?"active":"")">
    @tur.Name
        </a>
    }
</div>
